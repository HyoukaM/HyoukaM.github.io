#footer
  position: relative
  background: $light-transparent
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .5)
      content: ''

#footer-wrap
  position: relative
  display flex
  align-items center
  justify-content space-between
  //padding: 2rem 1rem
  padding: 1rem 2rem
  color: var(--light-grey)
  //text-align: center


  a
    color: var(--light-grey)
    margin-right 1rem
    font-size 18px

    &:last-child
      margin-right 0

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto
